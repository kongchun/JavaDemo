{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "gulp",
            "task": "default",
            "problemMatcher": [
                "$gulp-tsc"
            ]
        },
        {
            "label": "maven-clean",
            "type": "shell",
            "command": "mvn clean",
            "problemMatcher": []
        },
        {
            "label": "maven-install",
            "type": "shell",
            "command": "mvn clean install",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "maven-compile",
            "type": "shell",
            "command": "mvn clean compile war:exploded",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean-webapp",
            "type": "shell",
            "command": "rm ${workspaceFolder}/webapp -Recurse",
            "problemMatcher": []
        }
    ]
}